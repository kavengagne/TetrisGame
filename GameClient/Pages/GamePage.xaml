<UserControl x:Class="GameClient.Pages.GamePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xnaWpf1="clr-namespace:GameClient.Classes.Core.XnaWpf"
        mc:Ignorable="d" Width="600" Height="800">
    <DockPanel>
        <xnaWpf1:GamePanel Game="{Binding Game}" Visibility="Visible">
            <xnaWpf1:GamePanel.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Menu1">Click Me!</MenuItem>
                    <MenuItem Header="Menu2">Don't Click Me!</MenuItem>
                </ContextMenu>
            </xnaWpf1:GamePanel.ContextMenu>
        </xnaWpf1:GamePanel>
    </DockPanel>
</UserControl>
